{
  "manifest_version": 2,
  "name": "qrcode",
  "version": "1.0.0",
  "description": "快速二维码生成",
  "icons":
  {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  }, 
  "browser_action": 
  {
      "default_icon": "img/icon16.png",
      "default_title": "生成二维码",
      "default_popup": "qrcode_popup.html"
  },
  "permissions":
  [
      "contextMenus",
      "tabs",
      "notifications",
      "webRequest",
      "webRequestBlocking",
      "storage",
      "http://*/*",
      "https://*/*"
  ],
  "homepage_url": "https://www.baidu.com",
  "omnibox": { "keyword" : "qrcode" }
}